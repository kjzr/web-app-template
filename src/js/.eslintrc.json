{
    "plugins": [
        "html"
    ],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "amd": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "eqeqeq": "warn",
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-extra-semi": "error",
        "no-func-assign": "error",
        "brace-style": "warn",
        "quotes": [
            "error",
            "single"
        ],
        "no-lonely-if": "off",
        "no-undef": "warn"
    },
    "globals": {
        "mp": true,
        "$": true,
        "Confetti": true
    }
}